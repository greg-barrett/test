<h1>Recent activity...</h1>


<% @posts.each do |post| %>
<%= link_to user_post_path(post.author, post) do %>
  <div class="posts">
  <p><%= post.content %></p>
  <%= "Likes: #{post.likes.count}" %></br>
  <p><%= post.author.name  %></p>
  <p><%="Posted: #{post.created_at.to_formatted_s(:long)}" %></p>
  </div>
</br>
<% end %>
<% end %>
